<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivityFiles.MyPets.PetDetailsActivityFiles.GeneralFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
<!--        android:layout_above="@+id/bottomNavStudiesListFragment"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/removing_info_TW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:textSize="35dp"
                android:background="#8EC5AD"
                android:text="@string/general"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >
                <ImageView
                    android:id="@+id/imageViewGeneralFragment"
                    android:scaleType="fitXY"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:minHeight="250dp"
                    android:minWidth="250dp"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:padding="2dp"
                    android:background= "#8EC5AD"
                    />
                    <TextView
                        android:id="@+id/change_image"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:layout_marginBottom="20dp"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:background="#8EC5AD"
                        android:text="Zmień zdjęcie"
                        />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textAlignment="center"
                android:text="@string/name"
                />
            <TextView
                android:id="@+id/animalName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="center"
                android:text="exampleName"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textAlignment="center"
                android:text="@string/type"
                />
            <TextView
                android:id="@+id/animalType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20dp"
                android:text="exampleType"
                />
            <TextView
                android:id="@+id/ageViewInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textAlignment="center"
                android:text="@string/age"
                />
            <TextView
                android:id="@+id/animalAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20dp"
                android:text="exampleAge"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textAlignment="center"
                android:text="@string/birthday"
                />
            <TextView
                android:id="@+id/animalBirthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textAlignment="center"
                android:text="@string/height"
                />
            <TextView
                android:id="@+id/animalHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20dp"
                android:text="exampleHeight"
                />

            <Button
                android:layout_margin="10dp"
                android:id="@+id/btn_edit_animal_general_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edytuj"
                />


        </LinearLayout>

    </ScrollView>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container_general_fragment"

        android:layout_width="match_parent"
        android:layout_height="match_parent" />
